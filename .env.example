# APE (Agentic Pipeline Engine) 환경 변수 설정 예시

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=8001
API_TIMEOUT=30
API_STREAM=true

# 보안 설정
USE_SSL=false
VERIFY_SSL=false

# 내부망 LLM 설정
DEFAULT_MODEL=internal-model
INTERNAL_LLM_ENDPOINT=http://internal-llm-service/api
INTERNAL_LLM_API_KEY=your_internal_key_here

# 테스트용 외부 연결 설정
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1/chat/completions

# 벡터 DB 설정
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=data/chroma_db
VECTOR_DB_COLLECTION=documents
VECTOR_DB_DISTANCE_FUNC=cosine

# 임베딩 모델 설정
EMBEDDING_MODEL_NAME=KoSimCSE-roberta
EMBEDDING_MODEL_PATH=models/KoSimCSE-roberta-multitask
EMBEDDING_DIMENSION=768
EMBEDDING_MAX_SEQ_LENGTH=512

# 문서 처리 설정
DOCUMENT_CHUNK_SIZE=1000
DOCUMENT_CHUNK_OVERLAP=200

# 검색 설정
SEARCH_DEFAULT_TOP_K=3
SEARCH_MIN_RELEVANCE_SCORE=0.6

# 로깅 설정
LOG_LEVEL=INFO
